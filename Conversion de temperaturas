//Tarea 2 Conversion de temperaturas

#include <stdio.h>
#include <iostream>
#include <cstdlib>

int main ()

{
setlocale(LC_ALL, "");
system("color 70");

int opc, val1, Farenheit, Celsuis;
printf("Elija la opción que desee\n");
printf("\n1. Convertir ºF a ºC");
printf("\n2. Convertir ºC a ºF\n");
printf("\nOpción = ");
scanf("%d",&opc);
    
    switch(opc){
        
case 1:
    printf("\n/*-----------------------------------------------*/\n");
    printf("\n   Ingrese los grados que quiere convertir : ");
    scanf("%d",&val1);
if(val1>=34){
    Celsuis = (val1-32)/1.8;
    printf("   Celsuis:");
    printf("\x1B[31m º%d\033[0m\n", Celsuis);
}
else{
    Celsuis = (val1-32) /1.8;
    printf("   Celsuis:");
    printf("\x1B[34m º%d\033[0m\n", Celsuis);
}
    printf("\n/*-----------------------------------------------*/\n");
    break;
    
case 2:
    printf("\n/*-----------------------------------------------*/");
    printf("\n   Ingrese los grados que quiere convertir: ");
    scanf ("%d",&val1);
if(val1>=-17.9){
    Farenheit = (val1*9/5)+32;
    printf("   Farenheit:");
    printf("\x1B[31m º%d\033[0m\n", Farenheit);
}
else{
    Farenheit = (val1*9/5)+32;
    printf("   Farenheit:");
    printf("\x1B[34m º%d\033[0m\n", Farenheit);
}
    printf("/*-----------------------------------------------*/");
    break;
}
 return 0;
}

