printf("\n1. Convertir de ºF a ºC");
printf("\n2. Convertir de ºC a ºF\n");
printf("\nOpción = ");
scanf("%d",&opc);
    
    switch(opc){
        
case 1:
    printf("\nIngrese los grados que quiere convertir: ");
    scanf ("%d",&val1);
    Farenheit = (val1-32) /1.8;
    printf ("Farenheit = %d\n", Farenheit);
    break;
case 2:
    printf("\nIngrese los grados que quiere convertir: ");
    scanf ("%d",&val1);
    Celsuis = (val1*9/5)+32;
    printf ("Celsuis = %d\n", Celsuis);
