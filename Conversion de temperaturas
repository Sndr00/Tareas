//Tarea 2 Conversion de temperaturas

#include <stdio.h>
#include <iostream>
#include <cstdlib>

int main ()

{
setlocale(LC_ALL, "");
system("color 70");

int opc, val1, Farenheit, Celsuis;
printf("Elija la opción que desee\n");
printf("\n1. Convertir ºF a ºC");
printf("\n2. Convertir ºC a ºF\n");
printf("\nOpción = ");
scanf("%d",&opc);
    
    switch(opc){
        
case 1:
    printf("\n/*-----------------------------------------------*/");
    printf("\n   Ingrese los grados que quiere convertir : ");
    scanf ("%d",&val1);
    Celsuis = (val1-32) /1.8;
    printf ("   Celsuis : %d\n", Celsuis);
    printf("/*-----------------------------------------------*/");
    break;
case 2:
    printf("\n/*-----------------------------------------------*/");
    printf("\n   Ingrese los grados que quiere convertir: ");
    scanf ("%d",&val1);
    Farenheit = (val1*9/5)+32;
    printf ("   Farenheit:  %d\n", Farenheit);
    printf("/*-----------------------------------------------*/");
    break;
}
 return 0;
}
