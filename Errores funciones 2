#include <stdio.h>

void perimetroFigura (int num, int *perimetro){
	*perimetro = 4 * num;
}

void areaFigura (int num, int *area){
	*area = num * num;
}

int main (){
	int num;
	printf("Lado de un cuadrado: ");
	scanf("%d", &num);
	
	int perimetro, area;
	perimetroFigura(num, &perimetro);
	areaFigura(num, &area);
	
	printf("Perimetro: %d\n", perimetro);
	printf("Area: %d\n", area);
	return 0;
}
