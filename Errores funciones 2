#include <stdio.h>

int perimetroFigura (int num){
	int perimetro;
	perimetro = 4 * num;
	return perimetro;
}

int areaFigura (int num){
	int area;
	area = num * num;
	return area;
}

int main (){
	int num;
	printf("Lado de un cuadrado: ");
	scanf("%d", &num);
	printf("Perimetro: %d\n", perimetroFigura (num));
	printf("Area: %d\n", areaFigura(num));
	return 0;
}
