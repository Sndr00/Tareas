#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main (){
int opc, n,j,i;
srand(time(NULL));


printf("Elija la opcion que desea\n\n");
printf("1. Suma\n2. Resta\n3. Multiplicacion\n4. Diagonal\n5. Suma triangular superior\n6. Terminar el programa\n");
printf("Opcion: ");
scanf("%d", &opc);
printf("\nIngrese la longitud de la matriz\n");
scanf("%d", &n);

	
int A[n][n], B[n][n], C[n][n];
	for (i=0;i<n;i++){
	for (j=0; j<n; j++){
	A[i][j]=rand()%10;
	B[i][j]=rand()%10;}}
	printf("%d ",A[i][j]);
	printf("\n");
	printf("%d ",B[i][j]);
	
switch(opc){


case 1:

	for (i=0; i<n; i++) {
	for (j=0; j<n; j++){
	C[i][j]=A[i][j]+B[i][j];
	}
}
	printf("\n");
	for (i=0;i<n;i++){
		for (j=0; j<n; j++){	
			printf("La suma de las matrices es %d ",C[i][j]);
	}
			printf("\n");}
break;

case 2:

	for (i=0; i<n; i++) {
	for (j=0; j<n; j++){
	C[i][j]=A[i][j]-B[i][j];
	}
}
	printf("\n");
	for (i=0;i<n;i++){
		for (j=0; j<n; j++){
			printf("La resta de las matrices es %d",C[i][j]);	}
			printf("\n");}
break;

case 3:

	for (i=0; i<n; i++) {
	for (j=0; j<n; j++){
	C[i][j]=A[i][j]*B[i][j];
	}
}
	printf("\n");
	for (i=0;i<n;i++){
		for (j=0; j<n; j++){
			printf("La multiplicacion de las matrices %d",C[i][j]);	}
			printf("\n");}
	break;
	
case 4:
	if (i==j)
	C[i][j]=A[i][j]+B[i][j];
	printf("\n");
			printf("La suma de la diagonal principal es %d",C[i][j]);
			printf("\n");
break;


case 5:
	printf("La suma triangular superior es ");
break;


case 6:
break;
}

	
return 0;
}
